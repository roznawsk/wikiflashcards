            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()



<ReviewWindow>:
    name: 'review'

    grid: grid
    set_name: set_name

    canvas:
        Color:
            rgba: bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        Label:
            id: set_name
            pos_hint:{"x": 0.1, "top":0.95}
            size_hint:0.8, 0.15
            text: ""
            font_size: (min(root.width, root.height)/10)**(0.8)

        Button:
            pos_hint:{"x": 0.0, "top":0.975}
            size_hint:0.2, 0.1
            text: "Back"
            font_size: (min(root.width, root.height)/18)**(0.8)
            on_release:
                root.manager.transition.direction = "right"
                root.learningMethod()

        Button:
            pos_hint:{"x": 0.8, "top":0.975}
            size_hint:0.2, 0.1
            text: "All sets"
            font_size: (min(root.width, root.height)/18)**(0.8)
            on_release:
                root.manager.transition.direction = "up"
                root.allSets()

        ScrollView:

            pos_hint:{"x": 0.1, "top":0.75}
            size_hint: 0.8, 0.7

            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: grid

                pos: (0,0)
                size_hint_y: None
                thickness: 2
                padding: 10, 10

                row_default_height: 0.1 * root.height
                row_force_default: True


                cols: 1

