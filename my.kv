#:set bg_color (0.25, 0.68, 0.965, 1)

<CreateAccountWindow>:
    name: "create"

    canvas:
        Color:
            rgba: bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (min(root.width, root.height)/10)**(0.8)

            Label:
                size_hint: 0.5,0.1
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (min(root.width, root.height)/14)**(0.8)

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.1
                id: namee
                multiline: False
                font_size: (min(root.width, root.height)/14)**(0.8)

            Label:
                size_hint: 0.5,0.1
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (min(root.width, root.height)/14)**(0.8)

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.1
                id: email
                multiline: False
                font_size: (min(root.width, root.height)/14)**(0.8)

            Label:
                size_hint: 0.5,0.1
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (min(root.width, root.height)/14)**(0.8)

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.1
                id: passw
                multiline: False
                password: True
                font_size: (min(root.width, root.height)/14)**(0.8)

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (min(root.width, root.height)/18)**(0.8)
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (min(root.width, root.height)/14)**(0.8)
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

<LoginWindow>:
